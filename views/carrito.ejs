<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/resources/img/iconografia/ico.ico"
            type="image/x-icon">
        <link rel="stylesheet" href="/resources/css/tablas.css">
        <title>Carrito de <%= data.usuario %></title>
    </head>
    <body>
        <%- include("./partials/header.ejs") %>
        <main>
            <section style="flex-direction: column;">
                <h1 class="listado_1" style="margin: 10px auto; width:100%"> Carrito </h1>
                <section>
                    <table>
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Estado</th>
                            <th>Eliminar</th>
                        </tr>
                        <% carrito.forEach(producto => { %>
                        <tr>
                            <td><%= producto.id_carrito %></td>
                            <td><%= new
                                Date(producto.fecha).toLocaleDateString() %></td>
                            <td><%= producto.producto_nombre %></td>
                            <td><%= producto.precio %></td>
                            <td><%= producto.cantidad %></td>
                            <% if(producto.estado == 0) { %>
                            <td style="cursor: pointer;"
                                onclick="linkTo('carrito','<%= producto.id_carrito %>','producto/comprar','<%= producto.producto %>')">Comprar</td>
                            <% } else if (producto.estado == 1) { %>
                            <td>Comprado</td>
                            <% } %>
                            <td style="cursor: pointer;"
                                onclick="linkTo('carrito','<%= producto.id_carrito %>','producto/eliminar','<%= producto.producto %>')">Eliminar</td>
                        </tr>
                        <% }); %>
                    </table>
                </section>
            </section>
        </main>
        <%- include("./partials/footer.ejs") %>
    </body>
</html>