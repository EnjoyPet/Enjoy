<section class="form__flex">
  <!-- Formulario para actualizar la imagen de usuario -->
  <form
    class="registerform"
    id="registrar-Usuario-form"
    action="/actualizar-imagen_usuario"
    method="post"
    enctype="multipart/form-data"
  >
    <h1>Actualizar Imagen</h1>
    <!-- Etiqueta y campo de entrada para seleccionar la imagen -->
    <label for="imagen_post">Imagen</label>
    <button type="button" id="eliminar-imagen-btn" style="display: none">
      Limpiar Imagen
    </button>
    <!-- Vista previa de la imagen seleccionada (inicialmente oculta) -->
    <img
      style="display: none"
      id="imagen_preview"
      src="#"
      alt="Imagen previa"
    />
    <input type="file" name="imagen_post" id="imagen_post" accept="image/*" />
    <!-- Botón de envío del formulario -->
    <button id="submit-btn registrar-submit-btn" type="submit" name="enviar">
      Enviar
    </button>
  </form>
  <!-- Formulario para eliminar la imagen de usuario -->
  <form action="/eliminar-imagen_usuario" method="post">
    <!-- Botón para eliminar la imagen -->
    <button id="submit-btn registrar-submit-btn" type="submit" name="enviar">
      Eliminar Imagen
    </button>
  </form>
</section>
<!-- Script para manejar la funcionalidad del formulario -->
<script src="/resources/js/forms.js"></script>
