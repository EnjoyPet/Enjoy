<section class="sign__flex">
  <!-- Formulario para crear un nuevo post -->
  <form
    action="/hacerUnPost"
    id="postForm"
    method="post"
    enctype="multipart/form-data"
  >
    <!-- Etiqueta y campo de entrada para el título del post -->
    <label for="titulo">Título</label>
    <input
      type="text"
      name="titulo"
      id="titulo_post"
      placeholder="Título"
      maxlength="50"
      required
    />
    <!-- Etiqueta y área de texto para el contenido del post -->
    <label for="contenido_post">Contenido</label>
    <textarea
      name="contenido_post"
      id="contenido_post"
      maxlength="500"
      style="min-height: 300px"
      required
    ></textarea>
    <!-- Etiqueta y campo de entrada para la imagen del post -->
    <label for="imagen_post">Imagen</label>
    <img
      style="display: none"
      id="imagen_preview"
      src="#"
      alt="Imagen previa"
    />
    <input type="file" name="imagen_post" id="imagen_post" accept="image/*" />
    <!-- Etiqueta y lista desplegable para seleccionar la categoría del post -->
    <label for="Categoria_post">Categoría</label>
    <select name="Categoria_post" id="Categoria_post" required>
      <option value="1">Cachorro Grande</option>
      <option value="2">Cachorro Mediano</option>
      <option value="3">Cachorro Pequeño</option>
      <option value="4">Perro Adulto</option>
      <option value="5">Gatos</option>
      <option value="6">Aves</option>
    </select>
    <!-- Botón para enviar el formulario y crear el post -->
    <button type="submit">Postear</button>
  </form>
</section>
<!-- Script para manejar la funcionalidad del formulario -->
<script src="/resources/js/forms.js"></script>
