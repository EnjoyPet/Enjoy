<section class="sign__flex">
  <!-- Formulario para verificar el correo -->
  <form class="form_login" id="validar-Usuario-form" action="/verificar-mail" method="post">
    <!-- Mensaje de confirmación -->
    <p>Enviamos un código a tu bandeja de entrada o spam :)</p>

    <!-- Campo para ingresar el correo electrónico -->
    <input id="__registercorreo" type="email" name="correo" placeholder="Correo" autocomplete="off" required value="<%= correo %>" />

    <!-- Campo para ingresar el código de verificación -->
    <input id="registercodigo" type="text" name="codigo" placeholder="Codigo" maxlength="4" autocomplete="off" required />

    <!-- Botón para enviar el formulario -->
    <button id="submit-btn" type="submit" name="enviar">Verificar</button>
  </form>
</section>

<!-- Script para manejar el formulario -->
<script src="/resources/js/forms.js"></script>
